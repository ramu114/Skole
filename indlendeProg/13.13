void Funktion(char* message, int shift)
{
    char* pnd;
    char encrypted_message[80];
    
    pnd = message;
    
    for(pnd = message; *pnd; pnd++)
    {
        if ('A'<=*pnd&&*pnd<='Z')
        {
            *encrypted_message=((*pnd - 'A') + shift) % 26 + 'A';
        }
        else if ('a'<=*pnd&&*pnd<='z')
        {
            *encrypted_message=((*pnd - 'a') + shift) % 26 + 'a';
        }
        else
        {
             *encrypted_message=*pnd;
        }
        printf("%c",*encrypted_message);
    }
}
